@model EnxovalModel

@{
    ViewData["Title"] = "Cadastrar Item";
}

<h2>ITEM PARA COMPRAR</h2>

<form method="post" asp-action="AdicionarItem" asp-controller="Cozinha">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Digite aqui o nome do item">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Cadastrar</button>
        <a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
    </div>
</form>


