@model EnxovalModel

@{
    ViewData["Title"] = "Excluir Item";
}

<h2>DESEJA EXCLUIR ?</h2>

<form method="post" asp-action="ExcluirItem" asp-controller="Banheiro">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" id="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-danger w-50" asp-action="ExcluirItem" asp-controller="Banheiro">Excluir</button>
        <a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
    </div>
</form>